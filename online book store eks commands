curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
    2  unzip awscliv2.zip
    3  ls
    4  sudo ./aws/install
    5  aws configure
    6  curl -o kubectl https://amazon-eks.s3.us-west-2.amazonaws.com/1.19.6/2021-01-05/bin/linux/amd64/kubectl
    7  chmod +x ./kubectl
    8  sudo mv ./kubectl /usr/local/bin
    9  kubectl version --short --client
   10  curl --silent --location "https://github.com/weaveworks/eksctl/releases/latest/download/eksctl_$(uname -s)_amd64.tar.gz" | tar xz -C /tmp
   11  sudo mv /tmp/eksctl /usr/local/bin
   12  eksctl version
   13  eksctl create cluster --name=my-eks22                       --region=ap-south-1                       --zones=ap-south-1a,ap-south-1b                       --version=1.32                       --without-nodegroup
   14  eksctl create cluster --name=my-eks2211                       --region=ap-south-1                       --zones=ap-south-1a,ap-south-1b                       --version=1.32                       --without-nodegroup
   15  eksctl utils associate-iam-oidc-provider     --region ap-south-1     --cluster my-eks2211     --approve
   16  eksctl create nodegroup --cluster=my-eks2211                        --region=ap-south-1                        --name=node2                        --node-type=t3.medium                        --nodes=3                        --nodes-min=2                        --nodes-max=4                        --node-volume-size=20                        --ssh-access                        --ssh-public-key=hansible                        --managed                        --asg-access                        --external-dns-access                        --full-ecr-access                        --appmesh-access                        --alb-ingress-access
   17  sudo yum -y install docker
   18   sudo systemctl start docker
   19   sudo systemctl enable docker
   20  sudo chmod 666 /var/run/docker.sock
   21  sudo yum -y install git
   22  git clone https://github.com/Ekavitha123/onlinebookstore.git
   23  ls
   24  cd onlinebookstore/
   25  ls
   26  sudo yum -y install maven
   27  mvn clean install
   28  ls
   29  cd target/
   30  sudo vi dockerfile
   31  ls
   32  sudo vi dockerfile
   33  docker build -t war .
   34  sudo vi dockerfile
   35  docker build -t war .
   36  docker login
   37  docker tag war kavitha142/war:latest
   38  docker push kavitha142/war:latest
   39  cd
   40  sudo vi service.yaml
   41  kubectl apply -f service.yaml
   42  kubectl get svc
   43  sudo vi deployment.yaml
   44  kubectl apply -f deployment.yaml
   45   kubectl get deployments
   46  kubectl get deployments -o wide
       kubectl get pods
   47  kubectl port-forward --address 0.0.0.0 service/online-service 8080:80


sudo vi service.yaml

apiVersion: v1
kind: Service
metadata:
  name: online-service
spec:
  selector:
    app: online
  ports:
    - protocol: TCP
      port: 80  # Exposed port on the Service
      targetPort: 8080  # Port inside the container (Tomcat)
  type: LoadBalancer  # External acces
~    
                                                                                                                                               ~                                      
sudo vi deployment.yaml

apiVersion: apps/v1
kind: Deployment
metadata:
  name: online-deployment
  labels:
    app: online
spec:
  replicas: 2
  selector:
    matchLabels:
      app: online
  template:
    metadata:
      labels:
        app: online
    spec:
      containers:
      - name: online
        image: kavitha142/war
        ports:
        - containerPort: 8080


